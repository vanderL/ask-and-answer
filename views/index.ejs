<%- include('partials/header.ejs') %>
<%- include('partials/navbar.ejs') %>
<div class="container">
    <hr>
    <h1>Pontuação</h1>
    <hr>
        <a href="/ask" class="btn btn-dark">Link de registro</a>
    <% asks.forEach(ask => { %> 
        <br>
        <div class="card">
            <div class="card-body">
                <h3><%= ask.title %></h3>
            </div>
            <div class="card-footer">
                <a href="/asks/<%= ask.id %>">
                    <button class="btn btn-success"> Registrar ponto </button>
                </a>
            </div>
        </div>
    <% }) %>
    
</div>
<%- include('partials/footer.ejs') %>